<%= provide(:title, @user.name) %>

<div class="row justify-content-center">
  <section class="user_info">
    <h2>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h2>
    <%= link_to 'Edit profile', edit_user_path %>
  </section>
</div>

<div class="mx-auto mt-5">

  <% if @notes.empty? %>
    <%= link_to new_note_path, class: 'btn btn-primary' %>
    Add New Note
  <% else %>
    <%= render 'notes/note' %>
  <% end %>

</div>
