<%= form_with(model: note, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.rich_text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if @note %>
      <div class="float-right">
        <%= link_to 'Delete note', note, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if @note %>
      <%= link_to "Cancel", notes_path, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", notes_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>

