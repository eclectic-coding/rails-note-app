<div class="row">
  <div class="col-sm-6">
    <h1>Notes</h1>
  </div>

  <div class="col-sm-6 text-right">
    <%= link_to new_note_path, class: 'btn btn-primary' do %>
      Add New Note
    <% end %>
  </div>
</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @notes.each do |note| %>
      <%= content_tag :tr, id: dom_id(note), class: dom_class(note) do %>
        <td>
          <% if note.title.empty? %>
            <%= truncate(strip_tags(note.body.to_s), length: 30) %>
          <% else %>
            <%= note.title %>
          <% end %>
        </td>
        <td><%= link_to 'Show', note %></td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>