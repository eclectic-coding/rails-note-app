<div class="row mx-auto w-50 mt-5">
  <h2><%= @note.title %></h2>
</div>

<div class="row mx-auto w-50 mb-5">
  <p><%= @note.body %></p>
</div>

<div class="row mx-auto w-50">
  <%= link_to notes_path, class: 'btn btn-success mr-3' do %>
    All Posts
  <% end %>
  <%= link_to edit_note_path(@note), class: 'btn btn-primary mr-3' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit Post
  <% end %>
  <%= link_to edit_note_path(@note), class: 'btn btn-danger' do %>
    Delete Post
  <% end %>
</div>


